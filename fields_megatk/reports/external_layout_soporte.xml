<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_standard_soporte">
            <div class="header">
                <div class="row" style="margin-top: -90px;">
                    <div class="col-xs-3 mb4">
                        <img t-if="user.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(user.company_id.logo)" style="max-height: 250px;"/>
                    </div>
                
                </div>
                <div style="float: right; margin-top: -170px;">
                    <h3>Ticket # <span t-field="o.id"/></h3>                           
                </div>
                
            </div>
            <div class="article o_report_layout_standard">
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <div class="text-center" style="border-top: 1px solid rgb(13, 143, 210);">
                    <ul class="list-inline mb4">
                        <li t-if="user.company_id.street"><span t-field="user.company_id.street"/></li>
                    </ul>
                    <ul class="list-inline mb4">
                        <li t-if="user.company_id.street2"><span t-field="user.company_id.street2"/></li>
                    </ul>
                    <ul class="list-inline mb4">
                        <li t-if="user.company_id.phone">Telefono: <span t-field="user.company_id.phone"/></li>
                        <li t-if="user.company_id.email">Correo: <span t-field="user.company_id.email"/></li>
                        <li t-if="user.company_id.website">Web: <span t-field="user.company_id.website"/></li>
                        <li t-if="user.company_id.vat"><t t-esc="user.company_id.country_id.vat_label or 'RTN'"/>: <span t-field="user.company_id.vat"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="user.company_id.report_footer"/>
                    </div>

                    <div class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>