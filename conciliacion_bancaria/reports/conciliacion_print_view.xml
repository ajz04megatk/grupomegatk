<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="conciliacion_print_view">
<t t-call="web.external_layout">
  <t t-foreach="docs" t-as="o">
    <div class="header">
	<style>
                    *{
                         font-family: 'Bitstream Charter';
                         font-family::'Bitstream Vera Serif';
                     }
            p,span,t {
              margin-top:0px;
              margin-bottom:0px;
              padding-top:0px;
              padding-bottom:0px;
              font-size:11px;
             }
            .duo {
                display:inline;
             }
             h4 {
              margin-top:0px;
              margin-bottom:0px;
              padding-top:0px;
              padding-bottom:0px;
              font-size:16px;
             }
      </style>
    	<div class="container" style="border: 1px solid gray;border-radius: 5px;margin-top:10px;">
        <t t-if="user.company_id">
        <div class="row" style="min-height:90;">            
            <div class="col-xs-12">
                <div style="position:absolute;z-index:0;">
                    <img t-if="user.company_id.logo" t-att-src="'data:image/png;base64,%s' % user.company_id.logo" 
                            style="margin-top:10px;margin-left:5px;height: 75px;"/>
                 </div>
                 <div class="text-center text-uppercase" style="margin-top:15px;z-index: 1;">                           
                   <h4 t-if="user.company_id.name"> <t t-esc="user.company_id.name"/> </h4>
                   <p>
                       <p class="duo" t-if="user.company_id.street" ><t t-esc="user.company_id.street + ' ' "/> </p>
                       <p class="duo" t-if="user.company_id.street2" ><t t-esc="user.company_id.street2 + ' ' "/></p> 
                   </p>
                    <p> 
                       <p class="duo" t-if="user.company_id.phone" >
                         <span class="glyphicon glyphicon-phone-alt"></span> 
                         <t t-esc=" '  Telefono: ' +user.company_id.phone +' ' "/> 
                       </p>
                   </p>       
                 </div>
            </div>
          </div>
          <div class="row">
               <div class="col-xs-12 text-right">
                     <p t-if="user.company_id.company_registry" style="margin-right:0px;">
                         <t t-esc=" 'RTN: '+user.company_id.company_registry"/> 
                     </p>
               </div>            
          </div>
          </t>  


        </div>
    </div>

<div class="page">
<div class="oe_structure"/>

 <div class="row">
  <h2 class="text-center"><strong>Conciliación Bancaria</strong></h2>
         <br/><br/>
    <table style="width:100%;">
      	<tr >
		<td style="width:45%;">
			<strong>Fecha: </strong><span t-field="o.date" />   <br/>
			<strong>Banco: </strong><span t-field="o.account_id.name" />   <br/>
		</td>
		<td style="width:35%;">
			<strong>Descripción: </strong><span t-field="o.name" /> <br/>
		</td>
		<td class="text-left" style="width:15%;">
		</td>
		</tr>
    </table>
  <br/><br/>
   <h4>Movimientos Conciliados</h4>
  <br/>

		<table class="table table-condensed" style="font-size:12px;border:1px solid black;">
        <thead style="background:gray;color:#FFFFFF;">
        <tr style="font-size:12px;">
          <th class="text-left" style="width:16%;border:1px solid black;">Movimiento</th>
          <th class="text-center" style="width:20%;border:1px solid black;">Descripción</th>
          <th class="text-center" style="width:12%;border:1px solid black;">Fecha</th> 
          <!--<th class="text-center" style="width:15%;border:1px solid black;">Crédito</th>-->
          <th class="text-center" style="width:12%;border:1px solid black;">Debe</th>
          <th class="text-center" style="width:12%;border:1px solid black;">Haber</th>
          <th class="text-center" style="width:15%;border:1px solid black;">Moneda</th>
          <th class="text-center" style="width:12%;border:1px solid black;">Importe moneda</th>
        </tr>
        </thead>
        <tbody class="invoice_tbody" style="font-size:12px;">
        <tr t-foreach="o.conciliacion_line" t-as="l">
        <span t-if="l.es_conciliado">
        <td class="text-left" style="border:1px solid black;">
            <span t-field="l.move_id.name"/>
        </td>
        <td class="text-left" style="border:1px solid black;">
           <span t-field="l.name"/>
        </td>
        <!--<td class="text-right" style="border:1px solid black;">
        <span t-field="l.debit"/>
        </td>-->
        <td class="text-right" style="border:1px solid black;">
              <span t-field="l.date"/>
        </td>
        <td class="text-center" style="border:1px solid black;">
            <span t-field="l.debe"/>
        </td>
        <td class="text-center" style="border:1px solid black;">
              <span t-field="l.haber"/>
        </td>
        <td class="text-center" style="border:1px solid black;">
              <span t-field="l.currency_id.name"/>
        </td>
        <td class="text-center" style="border:1px solid black;">
              <span t-field="l.importe_moneda"/>
        </td>
        </span>
        </tr>
        </tbody>
        </table>

  </div>
  </div> 
      <!-- Esta etiqueta del footer es la que no funciona -->
  </t>
</t>


</template>
</data>
</odoo>
